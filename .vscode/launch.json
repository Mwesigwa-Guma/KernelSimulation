{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Makefile Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/simulate", 
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "MIDebuggerPath": "/usr/bin/lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with Makefile"  // Runs make before debugging
        }
    ]
}